@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}


<div class="container">
    <div class="row">

@*screen split in 12, offset is how many pieces to the left,
    md - medium monitor, sm - small, lg - large*@

        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-lg-3 col-xl-6">

            <h2 class="heading-margin text-center">Add Car</h2>

@*enctype is for supporting files and images in the form*@
@*            <form method="post" enctype ="multipart/form-data">*@

            <form method="post">
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="330, S-Class...">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="This is the best car..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Place your URL here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>                
                </div>

                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="Year" class="small text-danger"></span>              
                </div>

                <div class="form-group">
                    <label asp-for="CategoryID"></label>
                    <select asp-for="CategoryID" class="form-control">
                        @foreach(var category in Model.Categories)
                        {
                            <option value=@category.Id>@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryID" class="small text-danger"></span>                

                </div>

                <input type="file" name="Image" />

                <input class="btn btn-primary float-right" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>